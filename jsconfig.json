{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@api/*": ["src/api/*"],
			"@assets/*": ["src/assets/*"],
			"@config/*": ["src/config/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@recoil/*": ["src/recoil/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/hooks/*"],
			"@data/*": ["src/data/*"],
			"@i18n/*": ["src/i18n/*"]
		},
		"experimentalDecorators": true
	},
	"exclude": ["node_modules", "build"]
}
